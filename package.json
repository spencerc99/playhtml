{
  "name": "playhtml-root",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/playhtml",
    "packages/react",
    "packages/common",
    "packages/extension"
  ],
  "scripts": {
    "dev": "vite --config vite.config.site.mts",
    "dev-server": "bunx partykit dev partykit/party.ts",
    "dev-extension": "cd packages/extension && bun run dev",
    "deploy-server": "bunx partykit deploy",
    "deploy-server:staging": "bunx partykit deploy --preview staging",
    "build-site": "vite build website --config vite.config.site.mts",
    "build-packages": "for dir in packages/*; do (cd \"$dir\" && bun run build); done",
    "build-extension": "cd packages/extension && bun run build",
    "release": "node scripts/release.js",
    "release:common:patch": "node scripts/release.js common patch",
    "release:common:minor": "node scripts/release.js common minor",
    "release:common:major": "node scripts/release.js common major",
    "release:playhtml:patch": "node scripts/release.js playhtml patch",
    "release:playhtml:minor": "node scripts/release.js playhtml minor",
    "release:playhtml:major": "node scripts/release.js playhtml major",
    "release:react:patch": "node scripts/release.js react patch",
    "release:react:minor": "node scripts/release.js react minor",
    "release:react:major": "node scripts/release.js react major",
    "release:common:beta": "node scripts/release.js common prerelease --beta",
    "release:playhtml:beta": "node scripts/release.js playhtml prerelease --beta",
    "release:react:beta": "node scripts/release.js react prerelease --beta",
    "release:common:minor-beta": "node scripts/release.js common minor --beta",
    "release:playhtml:minor-beta": "node scripts/release.js playhtml minor --beta",
    "release:react:minor-beta": "node scripts/release.js react minor --beta"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20230518.0",
    "@types/canvas-confetti": "^1.6.4",
    "@types/node": "^20.3.3",
    "@types/randomcolor": "^0.5.9",
    "@types/react": "^18.2.48",
    "@types/react-is": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "glob": "^10.3.10",
    "sass": "^1.62.1",
    "typescript": "^5.0.2",
    "vite": "^7.1.2",
    "vite-plugin-mpa": "^1.2.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.45.1",
    "canvas-confetti": "^1.9.2",
    "partykit": "0.0.108",
    "profane-words": "^1.5.11",
    "randomcolor": "^0.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "y-partykit": "0.0.31",
    "yjs": "13.6.18"
  }
}
