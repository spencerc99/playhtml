{
  "name": "playhtml",
  "title": "playhtml",
  "description": "Create interactive, collaborative html elements with a single attribute",
  "version": "2.0.12",
  "license": "MIT",
  "type": "module",
  "keywords": [
    "html",
    "collaboration",
    "fun",
    "real-time",
    "persistence",
    "html energy"
  ],
  "author": {
    "name": "Spencer Chang",
    "email": "spencerc99@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "github:spencerc99/playhtml",
    "directory": "packages/playhtml"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/spencerc99"
  },
  "bugs": {
    "url": "https://github.com/spencerc99/playhtml/issues"
  },
  "main": "./dist/playhtml.umd.js",
  "types": "./dist/main.d.ts",
  "module": "./dist/playhtml.es.js",
  "homepage": "https://playhtml.fun",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/playhtml.es.js",
      "require": "./dist/playhtml.umd.js"
    },
    "./dist/style.css": {
      "import": "./dist/style.css",
      "require": "./dist/style.css"
    }
  },
  "scripts": {
    "build": "tsc && vite build",
    "publish-npm": "(yarn run build && rm README.md && cp ../../README.md . && yarn publish && yarn run cleanup) || (yarn run cleanup)",
    "cleanup": "rm README.md && ln -s ../../README.md ."
  },
  "devDependencies": {
    "sass": "^1.62.1",
    "typescript": "^5.0.2",
    "vite": "^4.3.9",
    "vite-plugin-dts": "^3.0.3"
  },
  "dependencies": {
    "@playhtml/common": "^0.0.3",
    "y-indexeddb": "^9.0.11",
    "y-partykit": "^0.0.10",
    "yjs": "^13.6.8"
  }
}
