{
  "name": "@playhtml/react",
  "description": "Create interactive, collaborative html elements in React",
  "version": "0.4.1",
  "license": "MIT",
  "type": "module",
  "keywords": [
    "react",
    "collaboration",
    "fun",
    "real-time",
    "persistence",
    "html energy"
  ],
  "author": "Spencer Chang <spencerc99@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/spencerc99/playhtml.git",
    "directory": "packages/react"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/spencerc99"
  },
  "bugs": {
    "url": "https://github.com/spencerc99/playhtml/issues"
  },
  "main": "./dist/react-playhtml.es.js",
  "types": "./dist/main.d.ts",
  "module": "./dist/react-playhtml.es.js",
  "homepage": "https://react-playhtml.fun",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/react-playhtml.es.js",
      "require": "./dist/react-playhtml.umd.js"
    }
  },
  "scripts": {
    "build": "tsc && vite build",
    "version-patch": "bun pm version patch",
    "version-minor": "bun pm version minor",
    "version-major": "bun pm version major",
    "publish": "bun run build && bun publish",
    "release-patch": "bun run version-patch && bun run publish",
    "release-minor": "bun run version-minor && bun run publish",
    "release-major": "bun run version-major && bun run publish",
    "prepublish-beta": "bun run build",
    "publish-beta": "bun run prepublish-beta && bun pm version prerelease --preid=beta && bun publish --tag beta",
    "publish-beta-patch": "bun run prepublish-beta && bun pm version patch --preid=beta && bun publish --tag beta",
    "publish-beta-minor": "bun run prepublish-beta && bun pm version minor --preid=beta && bun publish --tag beta",
    "test": "vitest run --no-typecheck",
    "test:watch": "vitest --no-typecheck"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^18.2.21 || ^19.0.0",
    "@vitejs/plugin-react": "^4.0.4",
    "jsdom": "^26.1.0",
    "react-resizable": "^3.0.5",
    "typescript": "^5.0.2",
    "vite": "^4.3.9",
    "vite-plugin-dts": "^3.0.3",
    "vitest": "^3.1.1"
  },
  "dependencies": {
    "@playhtml/common": "^0.0.13",
    "classnames": "^2.3.2",
    "playhtml": "^2.1.11",
    "react": "^16.8.0  || ^17.0.0 || ^18.2.0 || ^19.0.0",
    "react-dom": "^16.8.0  || ^17.0.0 || ^18.2.0 || ^19.0.0"
  },
  "peerDependencies": {
    "react": "^16.8.0  || ^17.0.0 || ^18.2.0 || ^19.0.0",
    "react-dom": "^16.8.0  || ^17.0.0 || ^18.2.0 || ^19.0.0"
  }
}
